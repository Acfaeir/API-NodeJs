{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "typeRoots": ["./src/@types", "./node_modules/@types"],

    "noEmit": true
  },
  "include": ["src"]
}
